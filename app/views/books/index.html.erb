<%= stylesheet_link_tag 'index' %>

<%= notice %>

<h1>Books</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

    <% @books.each do |book| %>
      <div>
        <tr class="table">
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
      </div>
    <% end %>

</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
    <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

    <div class="field">
      <label>Title</label>
      <div>
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="field">
      <label>Body</label>
      <div>
        <%= f.text_area :body %>
      </div>
    </div>

    <div>
    <%= f.submit 'Create Book' %>
    </div>
<% end %>

